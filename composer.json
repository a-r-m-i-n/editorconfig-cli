{
    "name": "armin/editorconfig-cli",
    "description": "CLI tool to validate and auto-fix text files, based on given .editorconfig declarations.",
    "type": "library",
    "version": "1.0.0-dev",
    "license": "MIT",
    "authors": [
        {
            "name": "Armin Vieweg",
            "email": "info@v.ieweg.de",
            "homepage": "https://v.ieweg.de"
        }
    ],
    "homepage": "https://github.com/a-r-m-i-n/editorconfig-cli",
    "support": {
        "issues": "https://github.com/a-r-m-i-n/editorconfig-cli/issues",
        "source": "https://github.com/a-r-m-i-n/editorconfig-cli"
    },
    "config": {
        "platform": {
            "php": "7.4.12"
        }
    },
    "require": {
        "php": "^7.4 | ^8.0",
        "ext-json": "*",
        "ext-iconv": "*",
        "symfony/console": "^5.2",
        "symfony/finder": "^5.2",
        "idiosyncratic/editorconfig": "^0.1.0",
        "symfony/mime": "^5.2"
    },
    "require-dev": {
        "seld/phar-utils": "^1.1",
        "phpstan/phpstan": "^0.12.74",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "friendsofphp/php-cs-fixer": "^2.18.2",
        "phpunit/phpunit": "^7.5",
        "cweagans/composer-patches": "^1.7"
    },
    "replace": {
        "phpunit/php-token-stream": "*"
    },
    "bin": [
        "bin/ec"
    ],
    "autoload": {
        "psr-4": {
            "Armin\\EditorconfigCli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Armin\\EditorconfigCli\\Tests\\": "tests"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patches": {
            "symfony/console": {
                "Fix strlen function in Helper.php to work with PHP 8": "patches/symfony-console-helper-php8.patch"
            }
        }
    },
    "scripts": {
        "ec": "@editor-config",
        "ec-fix": "@editor-config-fix",
        "editor-config": "@php bin/ec -e\"vendor\" -n",
        "editor-config-fix": "@php bin/ec -e\"vendor\" -n --fix",
        "check": [
            "@composer dump -o",
            "@ec",
            "@php-cs",
            "@php-stan"
        ],
        "fix": [
            "@composer dump -o",
            "@ec-fix",
            "@php-fix"
        ],
        "test": [
            "@composer dump -o",
            "@test-php-unit"
        ],
        "php-stan": "phpstan analyse -c .build/phpstan.neon",
        "php-cs": "php-cs-fixer fix --config .build/php-cs-rules.php --ansi --verbose --diff --dry-run",
        "php-fix": "php-cs-fixer fix --config .build/php-cs-rules.php --ansi",
        "test-php-unit": "phpunit -c .build/phpunit.xml --colors=always",
        "compile": [
            "@composer dump -o --no-dev",
            "Armin\\EditorconfigCli\\Compiler::compile"
        ]
    }
}
