{
    "name": "fgtclb/editor-config",
    "description": "CLI tool to validate and auto-fix text files, based on given .editorconfig declarations.",
    "type": "library",
    "license": "proprietary",
    "config": {
        "platform": {
            "php": "7.4.12"
        }
    },
    "require": {
        "symfony/console": "^5.2",
        "symfony/finder": "^5.2"
    },
    "require-dev": {
        "seld/phar-utils": "^1.1",
        "phpstan/phpstan": "^0.12.74",
        "jangregor/phpstan-prophecy": "^0.8.1"
    },
    "bin": [
        "bin/editor-config"
    ],
    "autoload": {
        "psr-4": {
            "FGTCLB\\EditorConfig\\": "src"
        }
    },
    "scripts": {
        "check": [
            "@php-stan"
        ],
        "php-stan": "phpstan analyse -c .build/phpstan.neon",
        "compile-phar": [
            "FGTCLB\\EditorConfig\\Compiler::compile"
        ]
    }
}
