{
    "name": "fgtclb/editor-config",
    "description": "CLI tool to validate and auto-fix text files, based on given .editorconfig declarations.",
    "type": "library",
    "license": "proprietary",
    "config": {
        "platform": {
            "php": "7.4.12"
        }
    },
    "require": {
        "php": "^7.4 | ^8.0",
        "ext-iconv": "*",
        "symfony/console": "^5.2",
        "symfony/finder": "^5.2",
        "idiosyncratic/editorconfig": "^0.1.0",
        "symfony/mime": "^5.2"
    },
    "require-dev": {
        "seld/phar-utils": "^1.1",
        "phpstan/phpstan": "^0.12.74",
        "jangregor/phpstan-prophecy": "^0.8.1",
        "friendsofphp/php-cs-fixer": "^2.18.2"
    },
    "bin": [
        "bin/editor-config"
    ],
    "autoload": {
        "psr-4": {
            "FGTCLB\\EditorConfig\\": "src"
        }
    },
    "scripts": {
        "ed": "@editor-config",
        "ed-fix": "@editor-config-fix",
        "editor-config": "@php bin/editor-config -e\"vendor\" -n",
        "editor-config-fix": "@php bin/editor-config -e\"vendor\" -n --fix",
        "check": [
            "@composer dump -o",
            "@ed",
            "@php-cs",
            "@php-stan"
        ],
        "fix": [
            "@composer dump -o",
            "@ed-fix",
            "@php-fix"
        ],
        "php-stan": "phpstan analyse -c .build/phpstan.neon",
        "php-cs": "php-cs-fixer fix --config .build/php-cs-rules.php --ansi --verbose --diff --dry-run",
        "php-fix": "php-cs-fixer fix --config .build/php-cs-rules.php --ansi",
        "compile-phar": [
            "FGTCLB\\EditorConfig\\Compiler::compile"
        ]
    }
}
